    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // –≠–ª–µ–º–µ–Ω—Ç—ã DOM
            const wordsColumn = document.getElementById('words-column');
            const translationsColumn = document.getElementById('translations-column');
            const connectionsSvg = document.getElementById('connections-svg');
            const scoreElement = document.getElementById('score');
            const timerElement = document.getElementById('timer');
            
            // –ì—Ä–∞–¥–∏–µ–Ω—Ç—ã –¥–ª—è SVG
            const svgNS = 'http://www.w3.org/2000/svg';
            
            // –ì—Ä–∞–¥–∏–µ–Ω—Ç –¥–ª—è –ø—Ä–∞–≤–∏–ª—å–Ω—ã—Ö —Å–≤—è–∑–µ–π
            const correctGradient = document.createElementNS(svgNS, 'linearGradient');
            correctGradient.setAttribute('id', 'correct-gradient');
            correctGradient.setAttribute('x1', '0%');
            correctGradient.setAttribute('y1', '0%');
            correctGradient.setAttribute('x2', '100%');
            correctGradient.setAttribute('y2', '100%');
            
            const stop1 = document.createElementNS(svgNS, 'stop');
            stop1.setAttribute('offset', '0%');
            stop1.setAttribute('stop-color', '#38a169');
            
            const stop2 = document.createElementNS(svgNS, 'stop');
            stop2.setAttribute('offset', '100%');
            stop2.setAttribute('stop-color', '#2f855a');
            
            correctGradient.appendChild(stop1);
            correctGradient.appendChild(stop2);
            connectionsSvg.appendChild(correctGradient);
            
            // –ì—Ä–∞–¥–∏–µ–Ω—Ç –¥–ª—è –Ω–µ–ø—Ä–∞–≤–∏–ª—å–Ω—ã—Ö —Å–≤—è–∑–µ–π
            const incorrectGradient = document.createElementNS(svgNS, 'linearGradient');
            incorrectGradient.setAttribute('id', 'incorrect-gradient');
            incorrectGradient.setAttribute('x1', '0%');
            incorrectGradient.setAttribute('y1', '0%');
            incorrectGradient.setAttribute('x2', '100%');
            incorrectGradient.setAttribute('y2', '100%');
            
            const stop3 = document.createElementNS(svgNS, 'stop');
            stop3.setAttribute('offset', '0%');
            stop3.setAttribute('stop-color', '#e53e3e');
            
            const stop4 = document.createElementNS(svgNS, 'stop');
            stop4.setAttribute('offset', '100%');
            stop4.setAttribute('stop-color', '#c53030');
            
            incorrectGradient.appendChild(stop3);
            incorrectGradient.appendChild(stop4);
            connectionsSvg.appendChild(incorrectGradient);
            
            // –°–æ—Å—Ç–æ—è–Ω–∏–µ –∏–≥—Ä—ã
            let selectedWord = null;
            let selectedTranslation = null;
            let connections = [];
            let score = 0;
            let timeLeft = 90; // 1:30 –≤ —Å–µ–∫—É–Ω–¥–∞—Ö
            let timerInterval;
            
            // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∏–≥—Ä—ã
            initGame();
            
            function initGame() {
                // –°–±—Ä–æ—Å–∏—Ç—å —Å–æ—Å—Ç–æ—è–Ω–∏–µ
                selectedWord = null;
                selectedTranslation = null;
                connections = [];
                score = 0;
                scoreElement.textContent = score;
                timeLeft = 90;
                updateTimer();
                
                // –û—á–∏—Å—Ç–∏—Ç—å –≤—Å–µ —Å–≤—è–∑–∏
                clearConnections();
                
                // –°–±—Ä–æ—Å–∏—Ç—å –∫–∞—Ä—Ç–æ—á–∫–∏
                document.querySelectorAll('.card').forEach(card => {
                    card.classList.remove('selected', 'correct', 'incorrect', 'paired');
                });
                
                // –ó–∞–ø—É—Å—Ç–∏—Ç—å —Ç–∞–π–º–µ—Ä
                startTimer();
                
                // –î–æ–±–∞–≤–∏—Ç—å –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ —Å–æ–±—ã—Ç–∏–π
                addCardEventListeners();
            }
            
            function addCardEventListeners() {
                const cards = document.querySelectorAll('.card');
                cards.forEach(card => {
                    card.addEventListener('click', handleCardClick);
                });
            }
            
            function handleCardClick(event) {
                const card = event.currentTarget;
                const column = card.closest('.column');
                const columnId = column.id;
                
                // –ï—Å–ª–∏ –∫–∞—Ä—Ç–æ—á–∫–∞ —É–∂–µ —Å–≤—è–∑–∞–Ω–∞ - —Ä–∞–∑–æ—Ä–≤–∞—Ç—å —Å–≤—è–∑—å
                if (card.classList.contains('paired')) {
                    breakConnection(card);
                    return;
                }
                
                // –û–±—Ä–∞–±–æ—Ç–∫–∞ –≤—ã–±–æ—Ä–∞ –≤ –∫–æ–ª–æ–Ω–∫–µ —Å–ª–æ–≤
                if (columnId === 'words-column') {
                    // –°–Ω—è—Ç—å –≤—ã–¥–µ–ª–µ–Ω–∏–µ —Å –ø—Ä–µ–¥—ã–¥—É—â–µ–π –≤—ã–±—Ä–∞–Ω–Ω–æ–π –∫–∞—Ä—Ç–æ—á–∫–∏ –≤ —ç—Ç–æ–π –∫–æ–ª–æ–Ω–∫–µ
                    if (selectedWord) {
                        selectedWord.classList.remove('selected');
                    }
                    
                    // –í—ã–±—Ä–∞—Ç—å –Ω–æ–≤—É—é –∫–∞—Ä—Ç–æ—á–∫—É
                    card.classList.add('selected');
                    selectedWord = card;
                    
                    // –ï—Å–ª–∏ –µ—Å—Ç—å –≤—ã–±—Ä–∞–Ω–Ω—ã–π –ø–µ—Ä–µ–≤–æ–¥ - —Å–æ–∑–¥–∞—Ç—å —Å–≤—è–∑—å
                    if (selectedTranslation) {
                        createConnection();
                    }
                }
                // –û–±—Ä–∞–±–æ—Ç–∫–∞ –≤—ã–±–æ—Ä–∞ –≤ –∫–æ–ª–æ–Ω–∫–µ –ø–µ—Ä–µ–≤–æ–¥–æ–≤
                else if (columnId === 'translations-column') {
                    // –°–Ω—è—Ç—å –≤—ã–¥–µ–ª–µ–Ω–∏–µ —Å –ø—Ä–µ–¥—ã–¥—É—â–µ–π –≤—ã–±—Ä–∞–Ω–Ω–æ–π –∫–∞—Ä—Ç–æ—á–∫–∏ –≤ —ç—Ç–æ–π –∫–æ–ª–æ–Ω–∫–µ
                    if (selectedTranslation) {
                        selectedTranslation.classList.remove('selected');
                    }
                    
                    // –í—ã–±—Ä–∞—Ç—å –Ω–æ–≤—É—é –∫–∞—Ä—Ç–æ—á–∫—É
                    card.classList.add('selected');
                    selectedTranslation = card;
                    
                    // –ï—Å–ª–∏ –µ—Å—Ç—å –≤—ã–±—Ä–∞–Ω–Ω–æ–µ —Å–ª–æ–≤–æ - —Å–æ–∑–¥–∞—Ç—å —Å–≤—è–∑—å
                    if (selectedWord) {
                        createConnection();
                    }
                }
            }
            
            function createConnection() {
                // –ü—Ä–æ–≤–µ—Ä–∫–∞, —á—Ç–æ –æ–±–µ –∫–∞—Ä—Ç–æ—á–∫–∏ –≤—ã–±—Ä–∞–Ω—ã
                if (!selectedWord || !selectedTranslation) return;
                
                // –ü–æ–ª—É—á–∏—Ç—å –∫–æ–æ—Ä–¥–∏–Ω–∞—Ç—ã –∫–∞—Ä—Ç–æ—á–µ–∫
                const wordRect = selectedWord.getBoundingClientRect();
                const transRect = selectedTranslation.getBoundingClientRect();
                const gameAreaRect = document.querySelector('.game-area').getBoundingClientRect();
                
                // –†–∞—Å—Å—á–∏—Ç–∞—Ç—å –ø–æ–∑–∏—Ü–∏–∏ –æ—Ç–Ω–æ—Å–∏—Ç–µ–ª—å–Ω–æ –∏–≥—Ä–æ–≤–æ–π –æ–±–ª–∞—Å—Ç–∏
                const wordX = wordRect.left + wordRect.width - gameAreaRect.left;
                const wordY = wordRect.top + wordRect.height / 2 - gameAreaRect.top;
                const transX = transRect.left - gameAreaRect.left;
                const transY = transRect.top + transRect.height / 2 - gameAreaRect.top;
                
                // –°–æ–∑–¥–∞—Ç—å –∫—Ä–∏–≤—É—é –ë–µ–∑—å–µ –¥–ª—è –±–æ–ª–µ–µ –∫—Ä–∞—Å–∏–≤–æ–≥–æ —Å–æ–µ–¥–∏–Ω–µ–Ω–∏—è
                const path = document.createElementNS(svgNS, 'path');
                const midX = (wordX + transX) / 2;
                
                // –§–æ—Ä–º–∏—Ä–æ–≤–∞–Ω–∏–µ –ø—É—Ç–∏ –∫—Ä–∏–≤–æ–π –ë–µ–∑—å–µ
                const pathData = `M ${wordX} ${wordY} C ${midX} ${wordY}, ${midX} ${transY}, ${transX} ${transY}`;
                path.setAttribute('d', pathData);
                path.classList.add('connection');
                
                // –ü—Ä–æ–≤–µ—Ä–∏—Ç—å, –ø—Ä–∞–≤–∏–ª—å–Ω–æ –ª–∏ —Å–æ–ø–æ—Å—Ç–∞–≤–ª–µ–Ω—ã –∫–∞—Ä—Ç–æ—á–∫–∏
                const isCorrect = selectedWord.dataset.id === selectedTranslation.dataset.id;
                
                // –î–æ–±–∞–≤–∏—Ç—å –∫–ª–∞—Å—Å –≤ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –æ—Ç –ø—Ä–∞–≤–∏–ª—å–Ω–æ—Å—Ç–∏
                if (isCorrect) {
                    path.classList.add('correct');
                    score++;
                    scoreElement.textContent = score;
                } else {
                    path.classList.add('incorrect');
                }
                
                // –î–æ–±–∞–≤–∏—Ç—å –ø—É—Ç—å –≤ SVG
                connectionsSvg.appendChild(path);
                
                // –°–æ—Ö—Ä–∞–Ω–∏—Ç—å –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ —Å–≤—è–∑–∏
                connections.push({
                    element: path,
                    word: selectedWord,
                    translation: selectedTranslation,
                    isCorrect: isCorrect
                });
                
                // –ü–æ–º–µ—Ç–∏—Ç—å –∫–∞—Ä—Ç–æ—á–∫–∏ –∫–∞–∫ —Å–≤—è–∑–∞–Ω–Ω—ã–µ
                selectedWord.classList.add('paired');
                selectedTranslation.classList.add('paired');
                
                // –î–æ–±–∞–≤–∏—Ç—å –∫–ª–∞—Å—Å –ø—Ä–∞–≤–∏–ª—å–Ω–æ—Å—Ç–∏/–Ω–µ–ø—Ä–∞–≤–∏–ª—å–Ω–æ—Å—Ç–∏
                if (isCorrect) {
                    selectedWord.classList.add('correct');
                    selectedTranslation.classList.add('correct');
                } else {
                    selectedWord.classList.add('incorrect');
                    selectedTranslation.classList.add('incorrect');
                }
                
                // –°–±—Ä–æ—Å–∏—Ç—å –≤—ã–±–æ—Ä
                selectedWord.classList.remove('selected');
                selectedTranslation.classList.remove('selected');
                selectedWord = null;
                selectedTranslation = null;
                
                // –ü—Ä–æ–≤–µ—Ä–∏—Ç—å –∑–∞–≤–µ—Ä—à–µ–Ω–∏–µ –∏–≥—Ä—ã
                if (score === 8) {
                    endGame(true);
                }
            }
            
            function breakConnection(card) {
                // –ù–∞–π—Ç–∏ —Å–≤—è–∑—å, —Å–æ–¥–µ—Ä–∂–∞—â—É—é —ç—Ç—É –∫–∞—Ä—Ç–æ—á–∫—É
                const connectionIndex = connections.findIndex(conn => 
                    conn.word === card || conn.translation === card
                );
                
                if (connectionIndex === -1) return;
                
                const connection = connections[connectionIndex];
                
                // –£–¥–∞–ª–∏—Ç—å –≤–∏–∑—É–∞–ª—å–Ω—É—é —Å–≤—è–∑—å
                connection.element.remove();
                
                // –£–¥–∞–ª–∏—Ç—å –∫–ª–∞—Å—Å—ã —Å–≤—è–∑–∞–Ω–Ω–æ—Å—Ç–∏ –∏ —Å—Ç–∏–ª–µ–π
                connection.word.classList.remove('paired', 'correct', 'incorrect');
                connection.translation.classList.remove('paired', 'correct', 'incorrect');
                
                // –ï—Å–ª–∏ —Å–≤—è–∑—å –±—ã–ª–∞ –ø—Ä–∞–≤–∏–ª—å–Ω–æ–π, —É–º–µ–Ω—å—à–∏—Ç—å —Å—á–µ—Ç
                if (connection.isCorrect) {
                    score--;
                    scoreElement.textContent = score;
                }
                
                // –£–¥–∞–ª–∏—Ç—å —Å–≤—è–∑—å –∏–∑ –º–∞—Å—Å–∏–≤–∞
                connections.splice(connectionIndex, 1);
            }
            
            function clearConnections() {
                // –£–¥–∞–ª–∏—Ç—å –≤—Å–µ –ø—É—Ç–∏ –∏–∑ SVG
                while (connectionsSvg.firstChild) {
                    if (connectionsSvg.firstChild.tagName === 'path') {
                        connectionsSvg.removeChild(connectionsSvg.firstChild);
                    } else {
                        break;
                    }
                }
            }
            
            function startTimer() {
                clearInterval(timerInterval);
                timerInterval = setInterval(() => {
                    timeLeft--;
                    updateTimer();
                    
                    if (timeLeft <= 0) {
                        endGame(false);
                    }
                }, 1000);
            }
            
            function updateTimer() {
                const minutes = Math.floor(timeLeft / 60);
                const seconds = timeLeft % 60;
                timerElement.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                
                // –ò–∑–º–µ–Ω–µ–Ω–∏–µ —Ü–≤–µ—Ç–∞ –ø—Ä–∏ –º–∞–ª–æ–º –≤—Ä–µ–º–µ–Ω–∏
                if (timeLeft <= 30) {
                    timerElement.style.background = 'linear-gradient(135deg, #e53e3e, #c53030)';
                } else if (timeLeft <= 60) {
                    timerElement.style.background = 'linear-gradient(135deg, #ed8936, #dd6b20)';
                }
            }
            
            function endGame(isWin) {
                clearInterval(timerInterval);
                
                if (isWin) {
                    // –ê–Ω–∏–º–∞—Ü–∏—è –ø–æ–±–µ–¥—ã
                    document.querySelectorAll('.card.correct').forEach(card => {
                        card.style.animation = 'pulse 1s infinite';
                    });
                    
                    // –ü–æ–∫–∞–∑–∞—Ç—å —Å–æ–æ–±—â–µ–Ω–∏–µ –æ –ø–æ–±–µ–¥–µ
                    alert('üéâ –ü–æ–∑–¥—Ä–∞–≤–ª—è–µ–º! –í—ã —É—Å–ø–µ—à–Ω–æ —Å–æ–ø–æ—Å—Ç–∞–≤–∏–ª–∏ –≤—Å–µ —Å–ª–æ–≤–∞!');
                } else {
                    // –ü–æ–∫–∞–∑–∞—Ç—å —Å–æ–æ–±—â–µ–Ω–∏–µ –æ –ø—Ä–æ–∏–≥—Ä—ã—à–µ
                    alert('‚è± –í—Ä–µ–º—è –≤—ã—à–ª–æ! –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –µ—â–µ —Ä–∞–∑!');
                }
            }
            
            // –î–µ–º–æ–Ω—Å—Ç—Ä–∞—Ü–∏—è —Ä–∞–±–æ—Ç—ã - —Å–æ–∑–¥–∞–µ–º –Ω–µ—Å–∫–æ–ª—å–∫–æ —Å–≤—è–∑–µ–π –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
            setTimeout(() => {
                // –í—ã–±–∏—Ä–∞–µ–º –Ω–µ—Å–∫–æ–ª—å–∫–æ –∫–∞—Ä—Ç–æ—á–µ–∫ –¥–ª—è –¥–µ–º–æ–Ω—Å—Ç—Ä–∞—Ü–∏–∏
                const demoWord1 = document.querySelector('#words-column .card[data-id="1"]');
                const demoTrans1 = document.querySelector('#translations-column .card[data-id="1"]');
                const demoWord2 = document.querySelector('#words-column .card[data-id="3"]');
                const demoTrans2 = document.querySelector('#translations-column .card[data-id="3"]');
                const demoWord3 = document.querySelector('#words-column .card[data-id="5"]');
                const demoTrans3 = document.querySelector('#translations-column .card[data-id="5"]');
                
                // –ò–º–∏—Ç–∏—Ä—É–µ–º –∫–ª–∏–∫–∏ –¥–ª—è —Å–æ–∑–¥–∞–Ω–∏—è —Å–≤—è–∑–µ–π
                demoWord1.click();
                demoTrans1.click();
                
                setTimeout(() => {
                    demoWord2.click();
                    demoTrans2.click();
                }, 800);
                
                setTimeout(() => {
                    demoWord3.click();
                    demoTrans3.click();
                }, 1600);
            }, 1000);
        });
    </script>
</body>
</html>


```

## –û—Å–Ω–æ–≤–Ω—ã–µ —É–ª—É—á—à–µ–Ω–∏—è –≤ –∏–≥—Ä–µ:

1. **–í–∏–∑—É–∞–ª—å–Ω–æ –ø—Ä–∏–≤–ª–µ–∫–∞—Ç–µ–ª—å–Ω—ã–µ —Å–≤—è–∑–∏**:
   - –ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω—ã –ø–ª–∞–≤–Ω—ã–µ –∫—Ä–∏–≤—ã–µ –ë–µ–∑—å–µ –≤–º–µ—Å—Ç–æ –ø—Ä—è–º—ã—Ö –ª–∏–Ω–∏–π
   - –î–æ–±–∞–≤–ª–µ–Ω—ã –≥—Ä–∞–¥–∏–µ–Ω—Ç—ã –¥–ª—è –ø—Ä–∞–≤–∏–ª—å–Ω—ã—Ö (–∑–µ–ª–µ–Ω—ã–π) –∏ –Ω–µ–ø—Ä–∞–≤–∏–ª—å–Ω—ã—Ö (–∫—Ä–∞—Å–Ω—ã–π) —Å–≤—è–∑–µ–π
   - –≠—Ñ—Ñ–µ–∫—Ç—ã —Ç–µ–Ω–µ–π –¥–ª—è –ª—É—á—à–µ–π –≤–∏–¥–∏–º–æ—Å—Ç–∏ —Å–≤—è–∑–µ–π
   - –ü–ª–∞–≤–Ω—ã–µ –∞–Ω–∏–º–∞—Ü–∏–∏ –ø—Ä–∏ —Å–æ–∑–¥–∞–Ω–∏–∏ —Å–≤—è–∑–µ–π

2. **–£–ª—É—á—à–µ–Ω–Ω—ã–π –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å –≤—ã–±–æ—Ä–∞**:
   - –ö–∞—Ä—Ç–æ—á–∫–∏ —Ç–µ–ø–µ—Ä—å –∏–º–µ—é—Ç —ç—Ñ—Ñ–µ–∫—Ç "–≤—Å–ø–ª—ã–≤–∞–Ω–∏—è" –ø—Ä–∏ –Ω–∞–≤–µ–¥–µ–Ω–∏–∏
   - –í—ã–±—Ä–∞–Ω–Ω—ã–µ –∫–∞—Ä—Ç–æ—á–∫–∏ –ø–æ–¥—Å–≤–µ—á–∏–≤–∞—é—Ç—Å—è –ø—É–ª—å—Å–∏—Ä—É—é—â–µ–π –∞–Ω–∏–º–∞—Ü–∏–µ–π
   - –ú–æ–∂–Ω–æ –ª–µ–≥–∫–æ –∏–∑–º–µ–Ω–∏—Ç—å –≤—ã–±–æ—Ä –≤ –ø—Ä–µ–¥–µ–ª–∞—Ö –∫–æ–ª–æ–Ω–∫–∏

3. **–°–∏—Å—Ç–µ–º–∞ —Ä–∞–∑—Ä—ã–≤–∞ —Å–≤—è–∑–µ–π**:
   - –ö–ª–∏–∫ –Ω–∞ —Å–≤—è–∑–∞–Ω–Ω–æ–π –∫–∞—Ä—Ç–æ—á–∫–µ —Ä–∞–∑—Ä—ã–≤–∞–µ—Ç —Å–≤—è–∑—å
   - –ö–∞—Ä—Ç–æ—á–∫–∏ –≤–æ–∑–≤—Ä–∞—â–∞—é—Ç—Å—è –≤ –∏—Å—Ö–æ–¥–Ω–æ–µ —Å–æ—Å—Ç–æ—è–Ω–∏–µ
   - –°—á–µ—Ç –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –∫–æ—Ä—Ä–µ–∫—Ç–∏—Ä—É–µ—Ç—Å—è –ø—Ä–∏ —Ä–∞–∑—Ä—ã–≤–µ –ø—Ä–∞–≤–∏–ª—å–Ω—ã—Ö —Å–≤—è–∑–µ–π

4. **–û–±—â–∏–π –¥–∏–∑–∞–π–Ω**:
   - –°–æ–≤—Ä–µ–º–µ–Ω–Ω–∞—è —Ç–µ–º–Ω–∞—è —Ç–µ–º–∞ —Å –Ω–µ–æ–Ω–æ–≤—ã–º–∏ –∞–∫—Ü–µ–Ω—Ç–∞–º–∏
   - –°—Ç–µ–∫–ª—è–Ω–Ω—ã–π –º–æ—Ä—Ñ–∏–∑–º (glassmorphism) –¥–ª—è —ç–ª–µ–º–µ–Ω—Ç–æ–≤ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞
   - –ê–¥–∞–ø—Ç–∏–≤–Ω—ã–π –¥–∏–∑–∞–π–Ω –¥–ª—è –≤—Å–µ—Ö —É—Å—Ç—Ä–æ–π—Å—Ç–≤
   - –ò–Ω—Ç—É–∏—Ç–∏–≤–Ω–∞—è –ø–∞–Ω–µ–ª—å —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è

5. **–î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏**:
   - –¢–∞–π–º–µ—Ä —Å –≤–∏–∑—É–∞–ª—å–Ω–æ–π –∏–Ω–¥–∏–∫–∞—Ü–∏–µ–π
   - –°–∏—Å—Ç–µ–º–∞ –ø–æ–¥—Å—á–µ—Ç–∞ –æ—á–∫–æ–≤
   - –ò–Ω—Å—Ç—Ä—É–∫—Ü–∏–∏ —Å –ø–æ–¥—Å–∫–∞–∑–∫–∞–º–∏ –ø–æ –∏–≥—Ä–µ

–ò–≥—Ä–∞ –ø–æ–ª–Ω–æ—Å—Ç—å—é –≥–æ—Ç–æ–≤–∞ –∫ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—é - –ø—Ä–æ—Å—Ç–æ —Å–∫–æ–ø–∏—Ä—É–π—Ç–µ –∫–æ–¥ –≤ HTML-—Ñ–∞–π–ª –∏ –æ—Ç–∫—Ä–æ–π—Ç–µ –≤ –±—Ä–∞—É–∑–µ—Ä–µ!


–ö–æ–Ω–µ—á–Ω–æ! –Ø —É–ª—É—á—à—É –≤–∞—à —Å–∞–π—Ç, —Å–¥–µ–ª–∞–≤ –µ–≥–æ **–±–æ–ª–µ–µ –∫—Ä–∞—Å–∏–≤—ã–º, —Å–æ–≤—Ä–µ–º–µ–Ω–Ω—ã–º –∏ —É–¥–æ–±–Ω—ã–º –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è**, —Å–æ—Ö—Ä–∞–Ω–∏–≤ –ø—Ä–∏ —ç—Ç–æ–º –≤—Å—é —Ñ—É–Ω–∫—Ü–∏–æ–Ω–∞–ª—å–Ω–æ—Å—Ç—å. –ù–∏–∂–µ –≤—ã –Ω–∞–π–¥–µ—Ç–µ –æ–±–Ω–æ–≤–ª–µ–Ω–Ω—ã–π HTML-—à–∞–±–ª–æ–Ω —Å —É–ª—É—á—à–µ–Ω–Ω—ã–º –¥–∏–∑–∞–π–Ω–æ–º, –∞–Ω–∏–º–∞—Ü–∏—è–º–∏, –æ—Ç–∑—ã–≤—á–∏–≤–æ—Å—Ç—å—é –∏ –ª—É—á—à–∏–º –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å—Å–∫–∏–º –æ–ø—ã—Ç–æ–º.

---

### ‚úÖ –ß—Ç–æ —è —É–ª—É—á—à–∏–ª:
- –°–æ–≤—Ä–µ–º–µ–Ω–Ω—ã–π, **–º–∏–Ω–∏–º–∞–ª–∏—Å—Ç–∏—á–Ω—ã–π –¥–∏–∑–∞–π–Ω** —Å –∞–∫—Ü–µ–Ω—Ç–∞–º–∏ —Ü–≤–µ—Ç–∞ –∏ —Ç–µ–Ω—è–º–∏.
- **–ü–ª–∞–≤–Ω—ã–µ –∞–Ω–∏–º–∞—Ü–∏–∏** –ø—Ä–∏ –æ—Ç–∫—Ä—ã—Ç–∏–∏ –Ω–∞—Å—Ç—Ä–æ–µ–∫.
- –£–ª—É—á—à–µ–Ω–Ω–∞—è **—á–∏—Ç–∞–µ–º–æ—Å—Ç—å –∏ —Å—Ç—Ä—É–∫—Ç—É—Ä–∞**.
- **–ò–Ω—Ç–µ—Ä–∞–∫—Ç–∏–≤–Ω—ã–µ —ç–ª–µ–º–µ–Ω—Ç—ã** —Å –≤–∏–∑—É–∞–ª—å–Ω–æ–π –æ–±—Ä–∞—Ç–Ω–æ–π —Å–≤—è–∑—å—é.
- **–û—Ç–∑—ã–≤—á–∏–≤–æ—Å—Ç—å** –ø–æ–¥ –º–æ–±–∏–ª—å–Ω—ã–µ —É—Å—Ç—Ä–æ–π—Å—Ç–≤–∞.
- –ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ **Google Fonts** –¥–ª—è —É–ª—É—á—à–µ–Ω–∏—è —Ç–∏–ø–æ–≥—Ä–∞—Ñ–∏–∫–∏.
- –î–æ–±–∞–≤–ª–µ–Ω—ã **–∏–∫–æ–Ω–∫–∏** –∏ **–º–∏–∫—Ä–æ–∞–Ω–∏–º–∞—Ü–∏–∏** –¥–ª—è –ª—É—á—à–µ–≥–æ UX.

---

### ‚úÖ –û–±–Ω–æ–≤–ª–µ–Ω–Ω—ã–π —à–∞–±–ª–æ–Ω:

```html
{% extends "base.html" %}

{% block title %}–ò–≥—Ä–∞: –°–æ–ø–æ—Å—Ç–∞–≤–ª–µ–Ω–∏–µ - –í—ã–±–æ—Ä –º–æ–¥—É–ª—è{% endblock %}

{% block head_extra %}
