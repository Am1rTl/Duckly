      <h3>–û—Å—Ç–∞–ª–æ—Å—å</h3>
      <p id="remainingLetters">?</p>
    </div>
    <div class="status-item">
      <h3>–í—Ä–µ–º—è</h3>
      <p id="timer">--:--</p>
    </div>
  </div>
  
  <!-- –û—Å–Ω–æ–≤–Ω–∞—è –∏–≥—Ä–∞ -->
  <div class="game-area">
    <!-- SVG –¥–ª—è –ª–∏–Ω–∏–π -->
    <svg class="connections-svg" id="connectionsSVG"></svg>
    
    <!-- –ë–ª–æ–∫ —Å–ª–æ–≤–∞ (–ø–æ–¥—á–µ—Ä–∫–∏–≤–∞–Ω–∏—è –∏–ª–∏ –±—É–∫–≤—ã) -->
    <div class="word-block" id="wordBlock">
      <h2>–°–ª–æ–≤–æ</h2>
      <div id="wordDisplay" class="word-display"></div>
    </div>
    
    <!-- –ë–ª–æ–∫ –ø–µ—Ä–µ–≤–æ–¥–∞ –∏–ª–∏ –ø–æ–¥—Å–∫–∞–∑–∫–∏ -->
    <div class="word-block-translation" id="translationBlock">
      <h2>–ü–µ—Ä–µ–≤–æ–¥</h2>
      <div id="translationDisplay" class="translation-display"></div>
    </div>
  </div>
  
  <!-- –ë–ª–æ–∫ –±—É–∫–≤ -->
  <div class="letters-container" id="lettersContainer"></div>
  
  <!-- –£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ -->
  <div class="controls">
    <button class="btn btn-primary" id="btnCheck">–ü—Ä–æ–≤–µ—Ä–∏—Ç—å</button>
    <button class="btn btn-secondary" id="btnReset">–ù–∞—á–∞—Ç—å –∑–∞–Ω–æ–≤–æ</button>
